{
  "name": "apple2ts-studio",
  "version": "1.0.4",
  "publisher": "CT6502",
  "engines": {
    "vscode": "^1.100.0"
  },
  "license": "CC-BY-SA-4.0",
  "displayName": "Apple2TS Studio",
  "description": "6502 Assembly IDE with integrated Apple IIe emulator",
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Education"
  ],
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/ct6502/apple2ts-studio.git"
  },
  "keywords": [
    "6502",
    "assembly",
    "apple",
    "emulator",
    "retro",
    "programming",
    "apple2",
    "apple2e",
    "vintage",
    "assembler"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "files": [
    "out/**/*",
    "syntaxes/**/*",
    "language-configuration.json",
    "src/merlin32_library/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "assets/**/*"
  ],
  "contributes": {
    "languages": [
      {
        "id": "apple2ts6502Assembly",
        "aliases": [
          "Apple2TS 6502 Assembly",
          "apple2ts6502Assembly"
        ],
        "extensions": [
          ".s",
          ".asm",
          ".a65"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "apple2ts6502Basic",
        "aliases": [
          "Apple2TS 6502 Basic",
          "apple2ts6502Basic"
        ],
        "extensions": [
          ".bas"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "apple2ts6502Assembly",
        "scopeName": "source.assembly.6502",
        "path": "./syntaxes/apple2ts6502Assembly.tmGrammar.json"
      },
      {
        "language": "apple2ts6502Basic",
        "scopeName": "source.basic.6502",
        "path": "./syntaxes/apple2ts6502Basic.tmGrammar.json"
      }
    ],
    "commands": [
      {
        "command": "apple2ts.launchEmulator",
        "title": "Launch Apple2TS Emulator",
        "category": "Apple2TS"
      },
      {
        "command": "apple2ts.buildAndRunAssembly",
        "title": "Build & Run in Emulator",
        "category": "Apple2TS"
      },
      {
        "command": "apple2ts.buildAndRunBasic",
        "title": "Build & Run in Emulator",
        "category": "Apple2TS"
      },
      {
        "command": "apple2ts.assembleFile",
        "title": "Assemble Current File",
        "category": "Apple2TS"
      }
    ],
    "keybindings": [
      {
        "command": "apple2ts.buildAndRunAssembly",
        "key": "f5",
        "when": "resourceExtname == .s || resourceExtname == .asm || resourceExtname == .a65"
      },
      {
        "command": "apple2ts.buildAndRunBasic",
        "key": "f5",
        "when": "resourceExtname == .bas"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "apple2ts.buildAndRunAssembly",
          "when": "resourceExtname == .s || resourceExtname == .asm || resourceExtname == .a65",
          "group": "apple2ts"
        },
        {
          "command": "apple2ts.buildAndRunBasic",
          "when": "resourceExtname == .bas",
          "group": "apple2ts"
        }
      ]
    },
    "configuration": {
      "title": "Apple2TS",
      "properties": {
        "apple2ts.emulator.theme": {
          "order": 1,
          "type": "string",
          "enum": [
            "Classic",
            "Dark"
          ],
          "default": "Dark",
          "description": "Apple2TS Emulator Theme"
        },
        "apple2ts.emulator.appmode": {
          "order": 2,
          "type": "string",
          "enum": [
            "Game",
            "Full"
          ],
          "default": "Game",
          "description": "Apple2TS Emulator Application Mode"
        },
        "apple2ts.assembler6502": {
          "order": 10,
          "type": "string",
          "enum": [
            "64tass",
            "cl65",
            "merlin32"
          ],
          "default": "64tass",
          "description": "Which 6502 assembler to use"
        },
        "apple2ts.assembler.tassPath": {
          "order": 11,
          "type": "string",
          "default": "64tass",
          "markdownDescription": "Path to [64tass](https://tass64.sourceforge.net/) executable"
        },
        "apple2ts.assembler.tassArgs": {
          "order": 12,
          "type": "string",
          "default": "-a --nostart --m65c02",
          "description": "Arguments for 64tass assembler"
        },
        "apple2ts.assembler.cl65Path": {
          "order": 21,
          "type": "string",
          "default": "cl65",
          "markdownDescription": "Path to [cl65](https://cc65.github.io/doc/cl65.html) executable"
        },
        "apple2ts.assembler.cl65Args": {
          "order": 22,
          "type": "string",
          "default": "--target apple2enh --config apple2enh-asm.cfg",
          "description": "Arguments for cl65 compiler/linker"
        },
        "apple2ts.assembler.merlinPath": {
          "order": 31,
          "type": "string",
          "default": "merlin32",
          "markdownDescription": "Path to [Merlin32](https://brutaldeluxe.fr/products/crossdevtools/merlin/) executable"
        },
        "apple2ts.assembler.merlinArgs": {
          "order": 32,
          "type": "string",
          "default": "",
          "description": "Arguments for Merlin32 compiler/linker"
        },
        "apple2ts.assembler.merlinMacros": {
          "order": 33,
          "type": "string",
          "default": "",
          "description": "Location of Merlin32 macro library (leave empty for default location within the extension)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "copy-webpack-plugin": "^11.0.0",
    "html-webpack-plugin": "^5.5.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1"
  },
  "dependencies": {
    "@vscode/vsce": "^3.7.0"
  }
}