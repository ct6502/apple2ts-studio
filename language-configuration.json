{
  "comments": {
    "lineComment": ";"
  },
  "brackets": [
    [
      "(",
      ")"
    ]
  ],
  "autoClosingPairs": [
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ]
  ],
  "surroundingPairs": [
    [
      "(",
      ")"
    ],
    [
      "\"",
      "\""
    ],
    [
      "'",
      "'"
    ]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*;\\s*#region",
      "end": "^\\s*;\\s*#endregion"
    }
  },
  "wordPattern": "[a-zA-Z0-9_$]+",
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(\\w+:\\s*)?\\.(proc|macro|if|ifdef|ifndef)\\b",
    "decreaseIndentPattern": "^\\s*\\.(endproc|endmacro|endif)\\b"
  }
}